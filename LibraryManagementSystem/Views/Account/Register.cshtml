@model LibraryManagementSystem.Models.Auth.RegisterViewModel
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<style>
    :root {
        --primary-teal: #007c89;
        --primary-teal-dark: #006471;
        --primary-teal-light: rgba(0, 124, 137, 0.1);
        --text-dark: #2d3748;
        --text-muted: #718096;
        --border-light: #e2e8f0;
    }

    body {
        background: linear-gradient(135deg, #f6f6f4 0%, #f0f5f5 100%);
        min-height: 100vh;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .register-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        padding: 2rem 0;
    }

    .register-card {
        background: #ffffff;
        border-radius: 16px;
        border: none;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .register-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 45px rgba(0, 0, 0, 0.12);
        }

    .register-header {
        background: linear-gradient(135deg, var(--primary-teal), var(--primary-teal-dark));
        padding: 2.5rem 2rem;
        text-align: center;
        color: white;
        position: relative;
        overflow: hidden;
    }

        .register-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
            background-size: 20px 20px;
            opacity: 0.1;
        }

        .register-header h2 {
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 0.5rem;
            position: relative;
        }

        .register-header p {
            opacity: 0.9;
            font-size: 0.95rem;
            margin: 0;
            position: relative;
        }

    .register-body {
        padding: 2.5rem 2rem;
    }

    .form-label {
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .form-label i {
            color: var(--primary-teal);
            font-size: 0.85rem;
        }

    .input-group-custom {
        position: relative;
        margin-bottom: 1.75rem;
    }

    .form-control-custom {
        padding: 0.875rem 1rem 0.875rem 2.75rem;
        border: 2px solid var(--border-light);
        border-radius: 10px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        background-color: #ffffff;
    }

        .form-control-custom:focus {
            border-color: var(--primary-teal);
            box-shadow: 0 0 0 3px var(--primary-teal-light);
            outline: none;
        }

        .form-control-custom::placeholder {
            color: #a0aec0;
            font-size: 0.9rem;
        }

    .input-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-muted);
        z-index: 4;
        pointer-events: none;
    }

    .password-toggle {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: var(--text-muted);
        cursor: pointer;
        z-index: 4;
        padding: 0.25rem;
    }

        .password-toggle:hover {
            color: var(--primary-teal);
        }

    .password-strength {
        margin-top: 0.75rem;
    }

    .strength-meter {
        height: 4px;
        background: #e2e8f0;
        border-radius: 2px;
        overflow: hidden;
        margin-bottom: 0.25rem;
    }

    .strength-fill {
        height: 100%;
        width: 0%;
        border-radius: 2px;
        transition: all 0.3s ease;
    }

    .strength-text {
        font-size: 0.8rem;
        color: var(--text-muted);
        text-align: right;
    }

    .btn-register {
        background: linear-gradient(135deg, var(--primary-teal), var(--primary-teal-dark));
        border: none;
        padding: 0.875rem 1.5rem;
        font-weight: 600;
        font-size: 1rem;
        border-radius: 10px;
        transition: all 0.3s ease;
        color: white;
        width: 100%;
        margin-top: 0.5rem;
        position: relative;
        overflow: hidden;
    }

        .btn-register:hover {
            transform: translateY(-1px);
            box-shadow: 0 8px 20px rgba(0, 124, 137, 0.25);
            color: white;
        }

        .btn-register:active {
            transform: translateY(0);
        }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 1.5rem 0;
        color: var(--text-muted);
        font-size: 0.85rem;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid var(--border-light);
        }

        .divider:not(:empty)::before {
            margin-right: 1rem;
        }

        .divider:not(:empty)::after {
            margin-left: 1rem;
        }

    .terms-check {
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--border-light);
    }

    .form-check-input:checked {
        background-color: var(--primary-teal);
        border-color: var(--primary-teal);
    }

    .login-link {
        text-align: center;
        margin-top: 1.5rem;
        color: var(--text-muted);
        font-size: 0.9rem;
    }

        .login-link a {
            color: var(--primary-teal);
            font-weight: 600;
            text-decoration: none;
            transition: color 0.2s ease;
        }

            .login-link a:hover {
                color: var(--primary-teal-dark);
                text-decoration: underline;
            }

    .validation-feedback {
        font-size: 0.85rem;
        margin-top: 0.25rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    @@keyframes ripple {
        0% {
            transform: scale(0, 0);
            opacity: 0.5;
        }

        100% {
            transform: scale(50, 50);
            opacity: 0;
        }
    }

    @@media (max-width: 576px) {
        .register-wrapper {
            padding: 1rem;
        }

        .register-header,
        .register-body {
            padding: 2rem 1.5rem;
        }

            .register-header h2 {
                font-size: 1.75rem;
            }
    }
</style>

<div class="register-wrapper">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="register-card">
                    <!-- Header -->
                    <div class="register-header">
                        <h2>Create Account</h2>
                        <p>Join our platform and unlock exclusive features</p>
                    </div>

                    <!-- Body -->
                    <div class="register-body">
                        <form asp-action="Register" method="post" novalidate>
                            <!-- Full Name -->
                            <div class="input-group-custom">
                                <label asp-for="FullName" class="form-label">
                                    <i class="bi bi-person"></i>
                                    Full Name
                                </label>
                                <div class="position-relative">
                                    <span class="input-icon"><i class="bi bi-person-fill"></i></span>
                                    <input asp-for="FullName" class="form-control form-control-custom" placeholder="John Doe" type="text" required />
                                </div>
                                <span asp-validation-for="FullName" class="text-danger validation-feedback"></span>
                            </div>

                            <!-- Email -->
                            <div class="input-group-custom">
                                <label asp-for="Email" class="form-label">
                                    <i class="bi bi-envelope"></i>
                                    Email Address
                                </label>
                                <div class="position-relative">
                                    <span class="input-icon"><i class="bi bi-envelope-fill"></i></span>
                                    <input asp-for="Email" class="form-control form-control-custom" placeholder="john@example.com" type="email" required />
                                </div>
                                <span asp-validation-for="Email" class="text-danger validation-feedback"></span>
                            </div>

                            <!-- Phone -->
                            <div class="input-group-custom">
                                <label asp-for="PhoneNumber" class="form-label">
                                    <i class="bi bi-telephone"></i>
                                    Phone Number
                                </label>
                                <input asp-for="PhoneNumber" class="form-control form-control-custom" placeholder="Enter your phone number" />
                                <span asp-validation-for="PhoneNumber" class="text-danger validation-feedback"></span>
                            </div>

                            <!-- Address -->
                            <div class="input-group-custom">
                                <label asp-for="Address" class="form-label">
                                    <i class="bi bi-geo-alt"></i>
                                    Address
                                </label>
                                <input asp-for="Address" class="form-control form-control-custom" placeholder="Enter your address" />
                                <span asp-validation-for="Address" class="text-danger validation-feedback"></span>
                            </div>

                          @*   <!-- Account Type -->
                            <div class="input-group-custom">
                                <label asp-for="AccountType" class="form-label">
                                    <i class="bi bi-person-badge"></i>
                                    Account Type
                                </label>
                                <select asp-for="AccountType" class="form-control form-control-custom">
                                    <option value="">Select account type</option>
                                    <option value="Administrator">Administrator</option>
                                    <option value="Student">Student</option>
                                    <option value="Mangement">Mangement</option>
                                </select>

                                <span asp-validation-for="AccountType" class="text-danger validation-feedback"></span>

                            </div>  *@

                            <!-- Password -->
                            <div class="input-group-custom">
                                <label asp-for="Password" class="form-label">
                                    <i class="bi bi-lock"></i>
                                    Password
                                </label>
                                <div class="position-relative">
                                    <span class="input-icon"><i class="bi bi-key-fill"></i></span>
                                    <input asp-for="Password" class="form-control form-control-custom" placeholder="Minimum 8 characters" type="password" id="password" minlength="8" required />
                                    <button type="button" class="password-toggle" id="togglePassword">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>
                                <div class="password-strength">
                                    <div class="strength-meter">
                                        <div class="strength-fill" id="strengthFill"></div>
                                    </div>
                                    <div class="strength-text" id="strengthText">Password strength</div>
                                </div>
                                <span asp-validation-for="Password" class="text-danger validation-feedback"></span>
                            </div>

                            <!-- Confirm Password -->
                            <div class="input-group-custom">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <i class="bi bi-lock-fill"></i>
                                    Confirm Password
                                </label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-custom" placeholder="Confirm password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger validation-feedback"></span>
                            </div>

                            <!-- Terms and Conditions -->
                            <div class="terms-check">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="termsCheck" required />
                                    <label class="form-check-label" for="termsCheck">
                                        I agree to the <a href="#" class="text-decoration-none">Terms of Service</a> and <a href="#" class="text-decoration-none">Privacy Policy</a>
                                    </label>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-register">
                                    <i class="bi bi-person-plus me-2"></i>
                                    Create Account
                                </button>
                            </div>

                            <!-- Login Link -->
                            <div class="login-link">
                                Already have an account? <a asp-controller="Account" asp-action="Login">Sign In</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Toggle password visibility
    document.getElementById('togglePassword').addEventListener('click', function () {
        const passwordInput = document.getElementById('password');
        const icon = this.querySelector('i');
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            icon.classList.remove('bi-eye');
            icon.classList.add('bi-eye-slash');
        } else {
            passwordInput.type = 'password';
            icon.classList.remove('bi-eye-slash');
            icon.classList.add('bi-eye');
        }
    });

    // Password strength indicator
    document.getElementById('password').addEventListener('input', function (e) {
        const password = e.target.value;
        const strengthFill = document.getElementById('strengthFill');
        const strengthText = document.getElementById('strengthText');
        let strength = 0;
        let messages = [];
        if (password.length >= 8) strength += 25; else messages.push('At least 8 characters');
        if (/[A-Z]/.test(password)) strength += 25; else messages.push('One uppercase letter');
        if (/[0-9]/.test(password)) strength += 25; else messages.push('One number');
        if (/[^A-Za-z0-9]/.test(password)) strength += 25; else messages.push('One special character');

        strengthFill.style.width = strength + '%';
        if (strength < 50) {
            strengthFill.style.backgroundColor = '#dc3545';
            strengthText.textContent = messages.length > 0 ? messages.join(', ') : 'Weak';
        } else if (strength < 75) {
            strengthFill.style.backgroundColor = '#ffc107';
            strengthText.textContent = 'Medium';
        } else {
            strengthFill.style.backgroundColor = '#28a745';
            strengthText.textContent = 'Strong';
        }
    });

    // Terms validation
    document.querySelector('form').addEventListener('submit', function (e) {
        const termsCheck = document.getElementById('termsCheck');
        if (!termsCheck.checked) {
            e.preventDefault();
            termsCheck.classList.add('is-invalid');
            alert('Please accept the Terms of Service and Privacy Policy');
        }
    });
</script>
