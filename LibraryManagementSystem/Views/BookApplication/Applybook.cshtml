@model LibraryManagementSystem.Models.BookApplication

@using LibraryManagementSystem.Helper
@using LibraryManagementSystem.Service
@using Microsoft.AspNetCore.Mvc.Rendering

@inject ISignInHelper SignInHelper
@inject IRolePermissionService RolePermissionService

@{
    ViewData["Title"] = "Apply Book";
    ViewData["ActivePage"] = "BookApplication";

    var bookItemsObj = ViewData["BookId"];
    IEnumerable<SelectListItem> bookItems =
        bookItemsObj as IEnumerable<SelectListItem>
        ?? (bookItemsObj as SelectList)?.ToList()
        ?? Enumerable.Empty<SelectListItem>();

    bool canManage =
        User.IsInRole("Manager") ||
        User.IsInRole("Manger") ||
        User.IsInRole("Management") ||
        User.IsInRole("Mangement") ||
        User.IsInRole("Admin") ||
        User.IsInRole("Administrator") ||
        User.IsInRole("Librarian");

    bool isStudent = User.IsInRole("Student");

    // ✅ Pre-calculated safe values
    var loggedStudentId = SignInHelper.UserId ?? 0;
    var loggedEmail = User?.Identity?.Name ?? Model?.StudentEmail ?? "";
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-xxl-8">
        <div class="dashboard-card p-5">

            <form asp-controller="BookApplication"
                  asp-action="Applybook"
                  method="post"
                  class="needs-validation"
                  novalidate>

                @Html.AntiForgeryToken()

                <!-- Hidden IDs -->
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="StudentId" value="@loggedStudentId" />

                <div class="row g-4">

                    <!-- ✅ Student Email -->
                    <div class="col-md-6">
                        <label asp-for="StudentEmail" class="form-label fw-semibold"></label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text">
                                <i class="bi bi-envelope"></i>
                            </span>

                            <!-- ✅ FIXED: proper <input> tag -->
                            <input asp-for="StudentEmail"
                                   type="email"
                                   class="form-control"
                                   placeholder="e.g. student@example.com"
                                   value="@loggedEmail"
                                   required />
                        </div>
                        <span asp-validation-for="StudentEmail" class="text-danger small"></span>
                    </div>

                    <!-- Student ID Card No -->
                    <div class="col-md-6">
                        <label asp-for="StudentIdCardNo" class="form-label fw-semibold"></label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text">
                                <i class="bi bi-person-badge"></i>
                            </span>
                            <input asp-for="StudentIdCardNo"
                                   class="form-control"
                                   placeholder="e.g. STU001234"
                                   required />
                        </div>
                        <span asp-validation-for="StudentIdCardNo" class="text-danger small"></span>
                    </div>

                    <!-- Book Selection -->
                    <div class="col-md-6">
                        <label asp-for="BookId" class="form-label fw-semibold"></label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text">
                                <i class="bi bi-book"></i>
                            </span>
                            <select asp-for="BookId"
                                    class="form-select"
                                    asp-items="bookItems"
                                    required>
                                <option value="">-- Select Book --</option>
                            </select>
                        </div>
                        <span asp-validation-for="BookId" class="text-danger small"></span>
                    </div>

                    @if (canManage)
                    {
                        <!-- Status -->
                        <div class="col-md-6">
                            <label asp-for="Status" class="form-label fw-semibold"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="Pending">Pending</option>
                                <option value="Approved">Approved</option>
                                <option value="Rejected">Rejected</option>
                            </select>
                        </div>

                        <!-- Fine -->
                        <div class="col-md-6">
                            <label asp-for="FineAmount" class="form-label fw-semibold"></label>
                            <input asp-for="FineAmount"
                                   type="number"
                                   step="0.01"
                                   class="form-control"
                                   min="0" />
                        </div>
                    }

                    <!-- Issue Date -->
                    <div class="col-md-6">
                        <label asp-for="IssueDate" class="form-label fw-semibold"></label>
                        <input asp-for="IssueDate" type="date" class="form-control" />
                    </div>

                    <!-- Return Date -->
                    <div class="col-md-6">
                        <label asp-for="ReturnDate" class="form-label fw-semibold"></label>
                        <input asp-for="ReturnDate" type="date" class="form-control" />
                    </div>

                </div>

                <hr class="my-5">

                <div class="d-flex justify-content-end gap-3">
                    <a asp-action="Index"
                       asp-controller="BookApplication"
                       class="btn btn-outline-secondary btn-lg">
                        Cancel
                    </a>

                    <button type="submit" class="btn btn-primary btn-lg">
                        Save Book
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
