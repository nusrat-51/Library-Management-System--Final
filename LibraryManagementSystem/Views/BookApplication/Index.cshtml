@using LibraryManagementSystem.Helper
@using LibraryManagementSystem.Service
@model IEnumerable<LibraryManagementSystem.Models.BookApplication>

@inject ISignInHelper SignInHelper
@inject IRolePermissionService RolePermissionService

@{
    ViewData["Title"] = "Book Applications";
    ViewData["ActivePage"] = "BookApplication";

    var role = SignInHelper.Roles;

    bool isAdminSide =
        RolePermissionService.CanEdit(role) ||
        RolePermissionService.CanDelete(role);

    var paidFineIds = ViewBag.PaidFineIds as HashSet<int> ?? new HashSet<int>();
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold text-primary mb-1">Book Applications</h3>
        <small class="text-muted">Dashboard / Book Applications</small>
    </div>
</div>

<!-- Applications Table -->
<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Student Email</th>
                    <th>Card No</th>
                    <th>Book</th>
                    <th>Status</th>
                    <th>Fine</th>
                    <th>Issue Date</th>
                    <th>Return Date</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>

            <tbody>
                @{
                    int index = 1;
                }

                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="9" class="text-center py-4 text-muted">
                            No book applications found.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        bool isFinePaid = paidFineIds.Contains(item.Id);

                        decimal finePerDay = 10m;
                        int overdueDays = 0;

                        if (item.ReturnDate != default(DateTime) && DateTime.Today > item.ReturnDate.Date)
                        {
                            overdueDays = (DateTime.Today - item.ReturnDate.Date).Days;
                        }

                        decimal computedFine =
                        isFinePaid ? 0 :
                        item.FineAmount > 0 ? item.FineAmount :
                        overdueDays > 0 ? overdueDays * finePerDay : 0;

                        <tr>
                            <td>@index</td>
                            <td>@item.StudentEmail</td>
                            <td>@item.StudentIdCardNo</td>
                            <td>@(item.Book?.Title ?? "—")</td>

                            <td>
                                <span class="badge bg-success">@item.Status</span>

                                @if (isFinePaid)
                                {
                                    <span class="badge bg-success ms-1">Paid</span>
                                }
                            </td>

                            <td>
                                @if (isFinePaid)
                                {
                                    <span class="text-success fw-bold">Paid</span>
                                }
                                else if (computedFine > 0)
                                {
                                    <span class="text-danger fw-bold">৳ @computedFine.ToString("0.00")</span>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>

                            <td>@(item.IssueDate != default(DateTime) ? item.IssueDate.ToString("dd MMM yyyy") : "—")</td>
                            <td>@(item.ReturnDate != default(DateTime) ? item.ReturnDate.ToString("dd MMM yyyy") : "—")</td>

                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">

                                    <!-- VIEW -->
                                    @if (RolePermissionService.CanView(role))
                                    {
                                        <a asp-action="Details"
                                           asp-route-id="@item.Id"
                                           class="btn btn-info btn-sm"
                                           title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    }

                                    <!-- STUDENT PAY FINE (ONLINE) -->
                                    @if (User.IsInRole("Student")
                                                                && !isFinePaid
                                                                && computedFine > 0
                                                                && (item.Status ?? "") == "Approved")
                                    {
                                        <form asp-controller="Payment"
                                              asp-action="PayFine"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Proceed to online fine payment now?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="bookApplicationId" value="@item.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm" title="Pay Fine">
                                                <i class="bi bi-cash-coin"></i> Pay Fine
                                            </button>
                                        </form>
                                    }

                                    <!-- ADMIN PAY CASH -->
                                    @if (isAdminSide
                                                                && !isFinePaid
                                                                && computedFine > 0
                                                                && (item.Status ?? "") == "Approved")
                                    {
                                        <form asp-controller="Payment"
                                              asp-action="PayCash"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Confirm cash payment now?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="bookApplicationId" value="@item.Id" />
                                            <button type="submit" class="btn btn-dark btn-sm" title="Pay Cash">
                                                <i class="bi bi-receipt"></i>
                                            </button>
                                        </form>
                                    }

                                    <!-- DELETE (ADMIN CLEANUP ONLY) -->
                                    @if (RolePermissionService.CanDelete(role))
                                    {
                                        <form asp-action="Delete"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Delete this application permanently?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }

                                </div>
                            </td>
                        </tr>

                        index++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
