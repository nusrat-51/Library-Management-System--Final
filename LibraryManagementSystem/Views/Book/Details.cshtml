@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Book Details";
    ViewData["ActivePage"] = "Books"; 
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h3 class="mb-1 fw-bold text-primary">Book Details</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Book" asp-action="Index">Books</a></li>
                <li class="breadcrumb-item active" aria-current="page">Details</li>
            </ol>
        </nav>
    </div>
    <div class="d-flex gap-2">
        @* Keep edit for admin/librarian only if you want; otherwise it will show to everyone *@
        @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
        {
            <a asp-action="CreateOrEdit" asp-route-id="@Model.Id" class="btn btn-primary shadow-sm">
                <i class="bi bi-pencil-square me-2"></i>Edit Book
            </a>
        }

        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

<!-- Book Details Card -->
<div class="row g-4">
    <div class="col-lg-10 mx-auto">
        <div class="dashboard-card overflow-hidden">
            <div class="row g-0">

                <!-- Book Information -->
                <div class="col-md-8">
                    <div class="card-body p-5">
                        <h2 class="card-title fw-bold mb-2" style="color: var(--primary);">@Model.Title</h2>
                        <h4 class="text-muted mb-4">by <span class="fw-semibold">@Model.Author</span></h4>

                        <dl class="row g-4">
                            <dt class="col-sm-4 fw-semibold text-muted">Category</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info text-dark px-3 py-2">@Model.Category</span>
                            </dd>

                            <dt class="col-sm-4 fw-semibold text-muted">Total Copies</dt>
                            <dd class="col-sm-8 fw-bold fs-5">@Model.TotalCopies</dd>

                            <dt class="col-sm-4 fw-semibold text-muted">Available Copies</dt>
                            <dd class="col-sm-8">
                                <span class="fw-bold fs-4" style="color: @(Model.AvailableCopies > 5 ? "var(--success)" : Model.AvailableCopies > 0 ? "var(--warning)" : "var(--danger)");">
                                    @Model.AvailableCopies
                                </span>
                                <span class="ms-3">
                                    @if (Model.AvailableCopies > 5)
                                    {
                                        <span class="badge bg-success px-3 py-2">In Stock</span>
                                    }
                                    else if (Model.AvailableCopies > 0)
                                    {
                                        <span class="badge bg-warning text-dark px-3 py-2">Low Stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger px-3 py-2">Out of Stock</span>
                                    }
                                </span>
                            </dd>
                        </dl>

                        <hr class="my-5">

                        <div class="d-flex gap-3">
                           
                            <a asp-controller="BookApplication"
                               asp-action="Applybook"
                               asp-route-id="@Model.Id"
                               class="btn btn-success btn-lg shadow-sm @(Model.AvailableCopies == 0 ? "disabled" : "")">
                                <i class="bi bi-journal-check me-2"></i>Issue This Book
                            </a>

                            <button class="btn btn-outline-primary btn-lg shadow-sm" onclick="window.print()">
                                <i class="bi bi-printer me-2"></i>Print Details
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    .dashboard-card {
        border-radius: 20px !important;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1) !important;
        transition: all 0.3s ease;
    }

        .dashboard-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15) !important;
        }

    .badge {
        border-radius: 50px;
        font-weight: 500;
    }
</style>
