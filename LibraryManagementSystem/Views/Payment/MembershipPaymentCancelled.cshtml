@{
    ViewData["Title"] = "Membership Payment Cancelled";
}

<div class="container py-5">
    <div class="card shadow-sm border-secondary">
        <div class="card-body p-4">
            <h2 class="fw-bold text-secondary mb-2">⚠️ Payment Cancelled</h2>
            <p class="text-muted mb-4">
                You cancelled the payment. No charge was made.
            </p>

            <div class="d-flex gap-2 flex-wrap">
                <a asp-controller="Premium" asp-action="Membership" class="btn btn-primary">
                    Buy Membership Again
                </a>
                <a asp-controller="Premium" asp-action="Index" class="btn btn-outline-secondary">
                    Back to Premium Collection
                </a>
            </div>
        </div>
    </div>
</div>
