@model LibraryManagementSystem.Models.BookCategory

@{
    ViewData["Title"] = "Category Details";
    ViewData["ActivePage"] = "BookCategory";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h3 class="mb-1 fw-bold" style="color: var(--primary);">Category Details</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-controller="BookCategory" asp-action="Index">Book Categories</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.CategoryName</li>
            </ol>
        </nav>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
        <i class="bi bi-arrow-left me-2"></i>Back to List
    </a>
</div>

<!-- Details Card -->
<div class="row justify-content-center">
    <div class="col-lg-9 col-xl-8">
        <div class="dashboard-card overflow-hidden" style="border-radius: 20px;">
            <!-- Gradient Header -->
            <div class="text-white py-5 text-center" style="background: linear-gradient(135deg, var(--primary), var(--secondary));">
                <div class="card-icon bg-white d-inline-flex mb-4 shadow-lg" style="width: 90px; height: 90px; border-radius: 50%;">
                    <i class="bi bi-tags fs-1 text-primary m-auto"></i>
                </div>
                <h2 class="mb-2 fw-bold fs-1">@Model.CategoryName</h2>
                <p class="mb-0 opacity-90 fs-5">
                    Category ID: #@Model.Id • Created on @Model.CreatedAt.ToString("MMMM dd, yyyy")
                </p>
            </div>

            <!-- Body -->
            <div class="card-body p-5 pt-5">
                <dl class="row g-5 mb-5">
                    <dt class="col-md-4 fw-semibold text-muted">Category Name</dt>
                    <dd class="col-md-8 fs-4 fw-bold" style="color: var(--primary);">@Model.CategoryName</dd>

                    <dt class="col-md-4 fw-semibold text-muted">Description</dt>
                    <dd class="col-md-8">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="mb-0 lh-lg text-muted fs-5">@Model.Description</p>
                        }
                        else
                        {
                            <span class="text-muted fst-italic">No description provided</span>
                        }
                    </dd>

                    <dt class="col-md-4 fw-semibold text-muted">Status</dt>
                    <dd class="col-md-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success text-white px-4 py-3 fs-5 rounded-pill">
                                <i class="bi bi-check-circle-fill me-2"></i>Active
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary text-white px-4 py-3 fs-5 rounded-pill">
                                <i class="bi bi-pause-circle-fill me-2"></i>Inactive
                            </span>
                        }
                    </dd>

                    <dt class="col-md-4 fw-semibold text-muted">Created On</dt>
                    <dd class="col-md-8 text-muted fs-5">
                        <i class="bi bi-calendar-event me-2"></i>
                        @Model.CreatedAt.ToString("dddd, MMMM dd, yyyy 'at' HH:mm")
                    </dd>
                </dl>

                <hr class="border-secondary-subtle">

                <div class="text-end mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg px-5 shadow-sm me-3 hover-lift">
                        <i class="bi bi-pencil-square me-2"></i>Edit Category
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 shadow-sm hover-lift">
                        <i class="bi bi-list-ul me-2"></i>Back to Categories
                    </a>
                </div>
            </div>
        </div>

        <!-- Optional: Books in this Category (Uncomment when you have count) -->
        @*
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <div class="dashboard-card text-center py-5 hover-lift">
                    <i class="bi bi-bookshelf fs-1" style="color: var(--secondary);"></i>
                    <h2 class="fw-bold mt-4 mb-2" style="color: var(--primary);">248</h2>
                    <p class="text-muted mb-0 fw-semibold fs-5">Books in this Category</p>
                    <a asp-controller="Book" asp-action="Index" asp-route-categoryId="@Model.Id" class="btn btn-outline-primary mt-3">View Books →</a>
                </div>
            </div>
        </div>
        *@
    </div>
</div>

<style>
    .dashboard-card {
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1) !important;
        transition: all 0.3s ease;
    }

        .dashboard-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15) !important;
        }

    .hover-lift {
        transition: all 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
        }

    .breadcrumb-item + .breadcrumb-item::before {
        content: ">";
        color: var(--gray);
    }

    .breadcrumb-item a {
        color: var(--secondary);
        text-decoration: none;
    }

        .breadcrumb-item a:hover {
            text-decoration: underline;
        }
</style>