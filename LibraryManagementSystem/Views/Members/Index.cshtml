@model IEnumerable<LibraryManagementSystem.Auth_IdentityModel.IdentityModel.User>

@{
    ViewData["Title"] = "Members";
    ViewData["ActivePage"] = "Members";

    bool canManagePremium =
        User?.Identity?.IsAuthenticated == true &&
        (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Librarian"));
}

<!-- Page Header -->
<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="text-primary mb-0">Members</h2>

    @if (canManagePremium)
    {
        <a asp-controller="Membership"
           asp-action="Index"
           class="btn btn-primary btn-sm shadow-sm">
            <i class="bi bi-star-fill me-1"></i> Premium Membership
        </a>
    }
</div>

<!-- Members Table -->
<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped mb-0">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Register Date</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.FullName</td>
                        <td>@m.Email</td>
                        <td>@m.Phone</td>
                        <td>@m.RegisterDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
