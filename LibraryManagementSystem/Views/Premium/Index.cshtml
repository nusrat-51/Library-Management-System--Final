@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Premium Collection";
    bool canApplyPremium = ViewBag.CanApplyPremium == true;
}

<h2 class="text-success mb-2">
    <i class="bi bi-star-fill me-2"></i> Premium Collection
</h2>

@if (!canApplyPremium)
{
    <div class="alert alert-warning">
        <i class="bi bi-lock-fill me-1"></i>
        Premium books are visible, but you can apply only after:
        <strong>1) Buying Premium Membership</strong> and <strong>2) Unlocking with Barcode</strong>.
        <div class="mt-2 d-flex gap-2 flex-wrap">
            <a asp-controller="Premium" asp-action="Membership" class="btn btn-sm btn-primary">
                Buy Membership
            </a>
            <a asp-controller="Premium" asp-action="Unlock" class="btn btn-sm btn-outline-dark">
                Unlock with Barcode
            </a>
        </div>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info mb-0">No premium books available right now.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped mb-0 align-middle">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Category</th>
                            <th>Total</th>
                            <th>Available</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var b in Model)
                        {
                            <tr>
                                <td>@b.Title</td>
                                <td>@b.Author</td>
                                <td>@b.Category</td>
                                <td>@b.TotalCopies</td>
                                <td>@b.AvailableCopies</td>

                                <td class="text-end">
                                    @if (b.AvailableCopies <= 0)
                                    {
                                        <button class="btn btn-secondary btn-sm" disabled>
                                            Not Available
                                        </button>
                                    }
                                    else if (canApplyPremium)
                                    {
                                        <a asp-controller="BookApplication"
                                           asp-action="Applybook"
                                           asp-route-id="@b.Id"
                                           class="btn btn-success btn-sm">
                                            Apply
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Premium"
                                           asp-action="Membership"
                                           class="btn btn-outline-secondary btn-sm"
                                           title="Buy membership then unlock to apply">
                                            <i class="bi bi-lock-fill me-1"></i> Apply (Locked)
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        }
    </div>
</div>
